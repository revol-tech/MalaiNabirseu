class PagesController < ApplicationController
  def index
  	binding.pry
   	 @whoweare = WhoWeAre.all()
     	 @whatwedo = WhatWeDo.all()
     	 @howtohelp = HowToHelp.all()
    @children = ChildrenSlider.all()
    @banner=Banner.all()
    @news	 = News.order("news_desc").page(params[:page]).per(2) 
    respond_to do |format|
      format.html
      format.js
      end

  end

	def news_paginator
  	binding.pry
     @news_view = News.order("created_at").page(params[:page]).per(2)
     respond_to do |format|
      format.js
    end
  end
  
  def about_us
		@children = ChildrenSlider.all()
  end

  def get_involved
		@children = ChildrenSlider.all()

  end

  def events
		@children = ChildrenSlider.all()
    @news = News.order("news_desc").page(params[:page]).per(2)
  end

  def children
		@children = ChildrenSlider.all()

  end

  def who_we_are
  end

  def what_we_do
			@children = ChildrenSlider.all()

  end

  def how_to_help
  end

  def donate
		@children = ChildrenSlider.all()

  end

	 def site_map
  end

	 def contact
  end
	
	def donate
		@children = ChildrenSlider.all()
		@news = News.all()
  end



end
