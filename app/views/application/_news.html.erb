<div id="news">
							<div class="image_tag">
									<%= image_tag "news.png" %>
							</div>	<!--end of image_tag-->
							<div class="news_image">
							   <div class="image">
									<% @news.each do |t| %>
									   <%= image_tag "#{t.news_image}", :width=>"95",:height=>"auto"%>
								    <%end%>
								    </div>
									<div class="news_text">
										<div class="strong">
											<strong><% @news.each do |t| %>
									         <p><%= t.news_title%></p>
									      <%end%></strong>
										</div>		<!--end of strong-->


									<div class="latest_news">
												<p>	<% @news.each do |t| %>
									          <p><%= t.news_desc%></p>
								        	<%end%>
												</p>
									</div>		<!--end of latest-news-->
										<div class="read_more">
											<strong>read more</strong>
										</div>		<!--end of strong-->

								</div>	<!--end of news_text-->
							</div>		<!--end of news_image-->


				</div>		<!--end of news-->
