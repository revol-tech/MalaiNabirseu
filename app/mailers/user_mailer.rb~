class UserMailer < ActionMailer::Base
   default :from => "ryan@railscasts.com"
  
  def registration_confirmation
  	  @news_viewer = NewsViewer.all
  	  
  	  @news_viewer.each do |t|
    	
    		mail(:to => "#{t.email}", :subject => "News").deliver do |format|
    				format.text
  				
    			end
  			end
	end
end	
